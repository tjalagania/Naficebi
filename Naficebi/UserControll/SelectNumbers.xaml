<UserControl x:Class="Naficebi.UserControll.SelectNumbers"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Naficebi.UserControll"
             mc:Ignorable="d" 
             x:Name="selectNumbers"
             
             >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
           
        </Grid.RowDefinitions>
        <TextBlock Text="რიცხვების არჩევა (10 - 99)" FontFamily="/Fonts/#BPG Square 38 Caps Cond"
                   Foreground="{StaticResource TypingColor}"
                    FontSize="18" Margin="100 0 0 50"
                   />
        <local:AuthTextBox PlaceHolder="მხარე 1" 
                           Text="{Binding ElementName=selectNumbers,Path=Number1,Mode=TwoWay}"
                           Grid.Row="1" Margin="100 0 0 0" Icon="ViewStream"/>
        <local:AuthTextBox PlaceHolder="მხარე 2" 
                           Text="{Binding ElementName=selectNumbers,Path=Number2,Mode=TwoWay}"
                           Grid.Row="1" Margin="100 60 0 0" Icon="ViewStream"/>
        
    </Grid>
</UserControl>

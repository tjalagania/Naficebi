<UserControl x:Class="Naficebi.UserControll.TextBlockWithBottomBorder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Naficebi.UserControll"
             mc:Ignorable="d" 
             x:Name="WithBorderBottom"
             >
    <Grid>
        <Border Background="Transparent"
                    BorderThickness=" 0 0 0 1"
                    Width="{Binding ElementName=WithBorderBottom,Path=Width}"
                    Padding="0 5 0 2"
                    BorderBrush="{StaticResource BorderColor}">
            <TextBlock Text="{Binding ElementName=WithBorderBottom,Path=Text}" Foreground="{StaticResource PlaceHolerColor}"/>
        </Border>
    </Grid>
</UserControl>
